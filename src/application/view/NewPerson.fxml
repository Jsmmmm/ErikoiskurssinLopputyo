<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Circle?>

<VBox prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.60" xmlns:fx="http://javafx.com/fxml/1" fx:controller="application.controllers.NewPersonController">
   <children>
      <HBox prefHeight="50.0">
         <children>
            <Label prefHeight="27.0" prefWidth="63.0" text="First Name" />
            <TextField fx:id="firstName" promptText="First Name" />
            <Circle fx:id="ball1" fill="#e40505" radius="11.0" stroke="BLACK" strokeType="INSIDE" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="5.0" left="20.0" right="5.0" top="20.0" />
         </padding>
      </HBox>
      <HBox prefHeight="50.0">
         <children>
            <Label prefHeight="26.0" prefWidth="65.0" text="Last Name" />
            <TextField fx:id="lastName" promptText="Last Name" />
            <Circle fx:id="ball2" fill="#e40505" radius="11.0" stroke="BLACK" strokeType="INSIDE" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="5.0" left="20.0" right="5.0" top="20.0" />
         </padding>
      </HBox>
      <HBox prefHeight="50.0">
         <children>
            <Label prefHeight="26.0" prefWidth="72.0" text="Age" />
            <TextField fx:id="age" prefHeight="27.0" prefWidth="76.0" promptText="Age" />
            <Circle fx:id="ball3" fill="#e40505" radius="12.0" stroke="BLACK" strokeType="INSIDE" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="5.0" left="20.0" right="5.0" top="20.0" />
         </padding>
      </HBox>
      <HBox prefHeight="50.0">
         <children>
            <Label prefHeight="21.0" prefWidth="72.0" text="Gender" />
            <RadioButton fx:id="Man" mnemonicParsing="false" prefHeight="17.0" prefWidth="61.0" selected="true" text="Male">
               <toggleGroup>
                  <ToggleGroup fx:id="group" />
               </toggleGroup>
            </RadioButton>
            <RadioButton fx:id="Female" mnemonicParsing="false" text="Female" toggleGroup="$group" />
         </children>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
         <padding>
            <Insets bottom="5.0" left="20.0" right="5.0" top="20.0" />
         </padding>
      </HBox>
      <HBox alignment="BOTTOM_RIGHT" prefHeight="247.0" prefWidth="640.0" spacing="10.0">
         <children>
            <Button fx:id="save" alignment="BOTTOM_CENTER" mnemonicParsing="false" onAction="#saveButtonPressed" text="Save" />
            <Button fx:id="clear" alignment="BOTTOM_CENTER" mnemonicParsing="false" onAction="#clearButtonPressed" text="Empty" />
            <Button fx:id="cancel" mnemonicParsing="false" onAction="#cancelButtonPressed" text="Cancel" />
         </children>
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" />
         </padding>
      </HBox>
   </children>
</VBox>
